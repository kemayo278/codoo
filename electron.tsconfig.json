{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./electron",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "electron/**/*"
  ],
  "exclude": [
    "node_modules",
    "src",
    "dist",
    ".next"
  ]
}
