{
  "name": "salesbox",
  "version": "0.1.1-dev.0",
  "description": "A point of sale application built with Electron and Next.js",
  "author": {
    "name": "CODEC",
    "email": "contact@codec.cm"
  },
  "homepage": "./",
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc",
    "electron": "cross-env NODE_ENV=production npm run build-static && tsc && electron  --disable-gpu .",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"tsc --watch\" \"wait-on http://localhost:3000 && electron --disable-gpu .\"",
    "electron-build": "cross-env NODE_ENV=production npm run build && npm run build-static && tsc",
    "pack": "npm run electron-build && electron-builder --dir",
    "dist": "npm run clean && npm run electron-build && electron-builder",
    "clean": "rimraf dist out build",
    "build-static": "next build && npm run format-html && npm run build-static-repair-index && npm run copy-styles",
    "build-static-repair-index": "node scripts/copy-splash.js && replace-in-files --string \"/_next/static\" --replacement \"../_next/static\" \"out/**/*.html\" && replace-in-files --string \"\\\"/assets/\" --replacement \"\\\"../assets/\" \"out/**/*.html\" && replace-in-files --string \"href=\\\"/\" --replacement \"href=\\\"./\" \"out/**/*.html\" && replace-in-files --string \"src=\\\"/\" --replacement \"src=\\\"./\" \"out/**/*.html\" && replace-in-files --string \"\\\"/assets/\" --replacement \"\\\"../../assets/\" \"out/**/**/*.html\" && node fix-nested-paths.js",
    "electron-rebuild": "electron-rebuild",
    "format-html": "node scripts/format-html.js",
    "postinstall": "electron-builder install-app-deps && electron-rebuild",
    "copy-styles": "copyfiles -u 1 out/_next/static/css/**/* out/styles/css",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:dev": "npm version prerelease --preid=dev --no-git-tag-version",
    "version:beta": "npm version prerelease --preid=beta --no-git-tag-version",
    "release": "npm run version:patch && npm run dist",
    "release:beta": "npm run version:beta && npm run dist",
    "version:prod": "npm version patch --no-git-tag-version",
    "version:prod:minor": "npm version minor --no-git-tag-version",
    "version:prod:major": "npm version major --no-git-tag-version",
    "i18n:extract": "i18next-scanner"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-query": "^5.62.1",
    "@types/pdfmake": "^0.2.10",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-day-picker": "^5.2.1",
    "@types/react-i18next": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "country-state-city": "^3.2.1",
    "date-fns": "^3.6.0",
    "electron-is-dev": "^3.0.1",
    "electron-serve": "^2.1.1",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.4",
    "lucide-react": "^0.461.0",
    "next": "latest",
    "next-electron-server": "^1.0.0",
    "next-intl": "^3.26.3",
    "node-thermal-printer": "^4.4.3",
    "pdfmake": "^0.2.15",
    "pg-hstore": "^2.3.4",
    "react": "^18.3.1",
    "react-datepicker": "^8.0.0",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^13.5.0",
    "react-select": "^5.8.3",
    "react-select-country-list": "^2.2.3",
    "receiptline": "^1.16.1",
    "recharts": "^2.13.3",
    "sequelize": "^6.35.1",
    "shadcn": "^2.1.6",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-select-country-list": "^2.2.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "glob": "^10.0.0",
    "i18next-scanner": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "replace-in-files-cli": "^2.2.0",
    "rimraf": "^4.4.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2",
    "wait-on": "^7.2.0"
  },
  "type": "module",
  "main": "electron/main.js",
  "build": {
    "appId": "com.salesbox.app",
    "productName": "SalesBox",
    "icon": "public/assets/images/icon.ico",
    "files": [
      "out/**/*",
      "electron/**/*",
      "assets/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/images/icon.ico",
      "artifactName": "SaleBox-Setup-${version}.${ext}",
      "publisherName": "CODEC",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "icon": "public/assets/images/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "dist"
    }
  }
}
